<!DOCTYPE html>
<html>
  <head>
    <title>Address Book</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <!--NOTE: CSS IS NOT LINKING -->
    <link href="/css/styles.css" rel="stylesheet" type="text/css">
  </head>
  <body>

  <div class="container">
    <h1>Address Book</h1>

    {% if contact_list is not empty %}
    {% for contact in contact_list %}
      <ol>
       <li>
         {{ contact.getName }} <br>{{ contact.getNumber}} <br>{{ contact.getAddress }}
       </li>
      </ol>
      {% endfor %}
    {% endif %}

    <div class="row">
        <form action="/contacts" method="post" class="form-group">
          <div class="col-xs-12">
          <label for="name">Contact Name</label>
          <input id="name" name="name" type="text" class="form-control" required>
          </div>

          <div class="col-xs-12">
          <label for="phone_number">Phone Number</label>
          <input id="phone_number" name="phone_number" type="text" class="form-control" required>
          </div>

          <div class="col-xs-12">
          <label for="address">Address</label>
          <input id="address" name="address" type="text" class="form-control" required>
          </div>
          <br>
          <button type="submit" class="btn btn-success">Add Contact Information</button>
          </div>
        </form>

    <form action="/remove_contacts" method="post">
      <br>
      <button type="submit">Clear All Contacts</button>
    </form>

    </div>
  </div>
  </body>
</html>
