<!DOCTYPE html>
<html>
  <head>
    <title>Address Book</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="/css/styles.css" rel="stylesheet" type="text/css">
  </head>
  <body>

  <div class="container">
    <h1>Address Book</h1>

    {% if contact_list is not empty %}
    {% for contact in contact_list %}
        <ul><li>{{ contact.getName }} <br>{{ contact.getNumber}} <br>{{ contact.getAddress }} {{ contact.getCity }} {{ contact.getState }}</li></ul>

      {% endfor %}
    {% endif %}

    <div class="row">
        <form action="/contacts" method="post" class="form-group">
            <div class="col-xs-12">
            <label for="name">Contact Name</label>
            <input id="name" name="name" type="text" class="form-control" required>
            </div>

            <div class="col-xs-12">
            <label for="phone_number">Phone Number</label>
            <input id="phone_number" name="phone_number" type="text" class="form-control" required>
            </div>

            <div class="col-xs-12">
            <label for="address">Address</label>
            <input id="address" name="address" type="text" class="form-control" required>
            </div>

            <div class="col-xs-12">
            <label for="city">City</label>
            <input id="city" name="city" type="text" class="form-control" required>
            </div>

            <div class="col-xs-12">
            <label for="state">State</label>
            <input id="state" name="state" type="text" class="form-control" required>
            </div>

            <div class="col-xs-6">
            <button type="submit" class="btn btn-success">Add Contact</button>
            </div>
        </form>

        <form action="/remove_contacts" method="post">
            <div class="col-xs-6">
                <button type="submit" class="btn btn-danger">Wipe Contacts</button>
            </div>
        </form>
  </div>
  </body>
</html>
